@page "/signin"

<PageTitle>Sign In - Culinary Command</PageTitle>

<div class="signin-container">
    <div class="signin-card">
        <div class="text-center mb-4">
            <h1 class="app-title">Culinary Command</h1>
            <p class="subtitle">Sign In To Your Account</p>
        </div>

        <EditForm Model="@signInModel" OnValidSubmit="@HandleSubmit">
            <!-- Selecting your role (Manager or Cook) -->
            <!-- Radio only allows one selection at a time (manager or cook)-->
            <div class="role-selection mb-4">
                <div class="btn-group w-100" role="group">
                    <input type="radio" class="btn-check" name="role" id="manager" value="Manager" @onchange="@((e) => signInModel.Role = e.Value?.ToString())" checked="@(signInModel.Role == "Manager")">
                    <label class="btn btn-outline-success role-btn" for="manager">
                        Manager
                    </label>

                    <input type="radio" class="btn-check" name="role" id="cook" value="Cook" @onchange="@((e) => signInModel.Role = e.Value?.ToString())" checked="@(signInModel.Role == "Cook")">
                    <label class="btn btn-outline-success role-btn" for="cook">
                        Cook
                    </label>
                </div>
            </div>
            <!-- Username -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <InputText id="username" type="text" class="form-control" @bind-Value="signInModel.Username" placeholder="Enter your username" />
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="password-input-container">
                    <InputText id="password" type="@(showPassword ? "text" : "password")" class="form-control" @bind-Value="signInModel.Password" placeholder="Enter your password" />
                    <button type="button" class="password-toggle-btn" @onclick="TogglePasswordVisibility">
                        <i class="fas @(showPassword ? "fa-eye-slash" : "fa-eye")"></i>
                    </button>
                </div>
            </div>

            <!-- Remember Me and Forget Password buttons -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <InputCheckbox id="remember" class="form-check-input" @bind-Value="signInModel.RememberMe" />
                    <label class="form-check-label" for="remember">
                        Remember me
                    </label>
                </div>
                <a href="/forgot-password" class="forgot-password-link">Forgot your password?</a>
            </div>

            <!-- Sign In button -->
            <button type="submit" class="btn btn-success w-100 signin-btn">Sign in</button>
        </EditForm>

        <!-- Sign Up Link -->
        <div class="text-center mt-4">
            <span class="text-muted">Don't have an account? </span>
            <a href="/signup" class="signup-link">Sign up</a>
        </div>
    </div>
</div>

@code {
    private SignInModel signInModel = new();
    private bool showPassword = false;

    protected override void OnInitialized()
    {
        signInModel.Role = "Manager"; // Default to Manager
    }

    private void HandleSubmit() 
    {
        Console.WriteLine($"Role: {signInModel.Role}");
        Console.WriteLine($"Username: {signInModel.Username}");
        Console.WriteLine($"Password: {signInModel.Password}");
        Console.WriteLine($"Remember Me: {signInModel.RememberMe}");
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private class SignInModel 
    {
        public string Role { get; set; } = "Manager";
        public string Username { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public bool RememberMe { get; set; } = false;
    }
}