@page "/tasks"
<PageTitle>My Tasks</PageTitle>

<h1 class="text-2xl font-bold mb-4">Current Tasks</h1>

<p>Good morning, @username ðŸ‘‹</p>

<p>Here's what's on your prep list today</p>


@if (taskList == null || taskList.Count == 0)
{
    <p><em>No tasks available.</em></p>
}
else
{
    <table class="table-auto w-full border-collapse border border-gray-300">
        <thead class="bg-gray-100">
            <tr>
                <th class="border border-gray-300 px-4 py-2 text-left">Task</th>
                <th class="border border-gray-300 px-4 py-2 text-left">Station</th>
                <th class="border border-gray-300 px-4 py-2 text-left">Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in taskList)
            {
                <tr>
                    <td class="border border-gray-300 px-4 py-2">@t.TaskName</td>
                    <td class="border border-gray-300 px-4 py-2">@t.Station</td>
                    <td class="border border-gray-300 px-4 py-2">@t.Date</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    // define structure for a task
    private class TaskItem
    {
        public string TaskName { get; set; } = "";
        public string Station { get; set; } = "";
        public string Date { get; set; } = "";
    }

    // a list of tasks to display
    private List<TaskItem> taskList = new();

    //username to display on page
    string username = "Dan";

    protected override async Task OnInitializedAsync()
    {
        // Simulate loading data 
        await Task.Delay(500);

        taskList = new List<TaskItem>

        {
            new() { TaskName = "Cook chicken", Station = "Grill", Date = "10am" },
            new() { TaskName = "Cut peppers", Station = "Prep", Date = "2pm" },
            new() { TaskName = "Clean dishes", Station = "Dish", Date = "10pm" }
        };
    }
}
