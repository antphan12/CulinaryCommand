@inject CulinaryCommand.Services.AuthService Auth
@inject NavigationManager NavigationManager

@inherits LayoutComponentBase
@using CulinaryCommand.Services
<div class="page">
    <!-- Sidebar -->
    <div class="sidebar">
        <NavMenu />
    </div>

    <!-- Main Page containing the top row and main content-->
    <main>
        <div class="top-row px-4 d-flex justify-content-end align-items-center">

    <!-- Business Dropdown -->
    <div class="dropdown me-3">
        <button class="btn btn-light dropdown-toggle d-flex align-items-center py-2 pe-3" type="button"
                id="businessMenu" data-bs-toggle="dropdown" aria-expanded="false" style="height:3rem;">

            <div class="icon-box d-flex align-items-center justify-content-center me-2"
                style="background-color:#d3ddd5; width:2.5rem; height:2.5rem; border-radius:0.45rem;">
                <i class="bi bi-building-check fs-4" style="color:#688f72;"></i>
            </div>
            <span>Downtown Bistro</span>
        </button>

        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="businessMenu">
            <li><h6 class="dropdown-header">Restaurants</h6></li>
            <li><a class="dropdown-item" href="/settings">Uptown Cafe</a></li>
            <li><a class="dropdown-item" href="/settings">Light Deli</a></li>
        </ul>
    </div>

    <!-- Profile Dropdown -->
    <div class="dropdown">
        <button class="btn btn-light dropdown-toggle d-flex align-items-center py-2 px-3" type="button"
                id="profileMenu" data-bs-toggle="dropdown" aria-expanded="false" style="height:3rem;">

            <img src="images/profile.jpg" alt="Profile"
                 class="rounded-circle me-2" style="width:2.5rem; height:2.5rem;" />

            @if (Auth.IsSignedIn)
            {
                @Auth.CurrentUser
            }
            else
            {
                <span>Guest</span>
            }
        </button>

        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileMenu">
            <li><a class="dropdown-item" href="/profile">View Profile</a></li>
            <li><a class="dropdown-item" href="/settings">Settings</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="#" @onclick="Logout">Logout</a></li>
        </ul>
    </div>
</div>


        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        Auth.OnAuthStateChanged += RefreshLayout;
        await Auth.EnsureInitializedAsync();
    }

    private void RefreshLayout() => InvokeAsync(StateHasChanged);

    public void Dispose()
    {
        Auth.OnAuthStateChanged -= RefreshLayout;
    }

    private async Task Logout()
    {
        await Auth.LogoutAsync();
        NavigationManager.NavigateTo("/signin", true);
    }
}
