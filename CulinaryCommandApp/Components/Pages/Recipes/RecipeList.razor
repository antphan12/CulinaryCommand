@using CulinaryCommand.Data.Entities
@inject NavigationManager Nav
@inject IJSRuntime Js
@inject RecipeService Recipes
@inject AuthService auth
@rendermode InteractiveServer

<h3 class="mb-3">Recipes</h3>

<button class="btn btn-success mb-3" @onclick="AddNew">
    <i class="bi bi-plus-circle"></i> Add New Recipe
</button>

@if (recipes == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Type</th>
                <th>Yield</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in recipes)
            {
                <tr>
                    <td>@r.Title</td>
                    <td>@r.Category</td>
                    <td>@r.RecipeType</td>
                    <td>@FormatYield(r)</td>
                    <td>
                    @if (priv){
                        <button class="btn btn-primary me-2" @onclick="() => Edit(r.RecipeId)">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <button class="btn btn-danger" @onclick="() => Delete(r.RecipeId)">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Recipe>? recipes;
    private string role = string.Empty;
    private bool priv = false;
    
    protected override async Task OnInitializedAsync()
    {
        recipes = await Recipes.GetAllAsync();
        if (auth.CurrentUser?.Role == "Manager" || auth.CurrentUser.Role == "Admin"){
            priv = true;
        }
    }

    void AddNew() => Nav.NavigateTo("/recipes/create");
    void Edit(int id) => Nav.NavigateTo($"/recipes/edit/{id}");

    async Task Delete(int id)
    {
        if (await Js.InvokeAsync<bool>("confirm", $"Delete recipe #{id}?"))
        {
           await Recipes.DeleteAsync(id);
           recipes = await Recipes.GetAllAsync();
        }
    }

    private string FormatYield(Recipe r)
    {
        if (!r.YieldAmount.HasValue)
        {
            // If you ever want to show "â€”" when no yield, do it here
            return string.IsNullOrWhiteSpace(r.YieldUnit) ? string.Empty : r.YieldUnit!;
        }

        var amount = r.YieldAmount.Value;

        // Strip pointless trailing zeros: 20.0000 -> "20", 20.5 -> "20.5"
        var amountText = decimal.Truncate(amount) == amount
            ? amount.ToString("0")      // integer
            : amount.ToString("0.##");  // up to 2 decimal places

        if (string.IsNullOrWhiteSpace(r.YieldUnit))
            return amountText;

        return $"{amountText} {r.YieldUnit}";
    }
}
